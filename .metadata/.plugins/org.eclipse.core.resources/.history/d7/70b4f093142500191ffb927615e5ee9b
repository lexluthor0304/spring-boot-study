<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
	<!-- テーブルカラムの対照関係を記載 -->
	<mapper namespace="com.springboot.mybatis.UserMapper">
		<resultMap id="BaseResultMap" type="com.springboot.mybatis.model.User">
		<result column="userName" property="userName" jdbcType="VARCHAR" />
		<result column="passWord" property="passWord" jdbcType="VARCHAR" />
		<result column="user_sex" property="user_sex" jdbcType="com.springboot.mybatis.emus.UserSexEmus" />
		<result column="nickName" property="nickName" jdbcType="VARCHAR" />
	</resultMap>

	<!-- 共通しているカラムを記載 -->
	<sql id="Base_Column_List">
		id, userName, passWord, user_sex, nickName
	</sql>

	<!-- 共通しているカラムの記載を省く -->
	<select id="getAll" resultMap="BaseResultMap">
	SELECT
	<!-- ↓↓↓↓ここです -->
	<include refid="Base_Column_List" />
	FROM mybatis
	</select>

	<!-- 一件つづセレクト -->
	<select id="getOne" parameterType="Long" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"></include>
		FROM mybatis
		WHERE id={id}
	</select>

	<!-- インサート文 -->
	<insert id="insert" parameterType="com.springboot.mybatis.model.User">
		INSERT INTO
				users
				(userName, password, user_sex)
			VALUES
				(#{userName}, #{passWord}, #{user_sex})
	</insert>

	<!-- アップデート文 -->
	<update id="update" parameterType="com.springboot.mybatis.model.User">
		UPDATA
				mybatis
		SET
			<!-- NULLかどうかを判断する -->
			<if test="userName != null">userName = #{userName}, </if>
			<if test="passWord != null">passWord = #{passWord}, </if>
			nick_name = #{nickName}
		WHERE
			id = #{id}
	</update>

	<!-- 削除 -->
	<delete id="delete" parameterType="Long">
		DELETE FROM
				mybatis
		WHERE
				id = #{id}
	</delete>

	</mapper>

